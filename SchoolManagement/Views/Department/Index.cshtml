@model IEnumerable<SchoolManagement.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h3 style="text-align:center">Departments</h3>
<hr />

<p>
    <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fas fa-plus"></i> Add New Department</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.Id" > <i class="far fa-edit fa-lg" title="Edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash-alt fa-lg" title="Delete"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
